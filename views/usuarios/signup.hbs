<h1>Registro</h1>

<form action="/api/auth/signup" method="POST">

    {{!-- Nombre --}}

    <div class="mb-3">
        <label for="name" class="form-label">Nombre</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Ingrese su nombre">
    </div>

    {{!-- Correo --}}

    <div class="mb-3">
        <label for="email" class="form-label">Correo electronico</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="Ingrese su correo">
    </div>

    {{!-- Password --}}

    <div class="mb-3">
        <label for="password" class="form-label">Contraseña</label>
        <input type="text" class="form-control" id="password" name="password" placeholder="Ingrese su contraseña">
    </div>

    {{!-- Reingresar Password --}}

    <div class="mb-3">
        <label for="confirm_password" class="form-label">Reingrese su password</label>
        <input type="text" class="form-control" id="confirm_password" name="confirm_password" placeholder="Reingrese su contraseña">
    </div>

    <button class="btn btn-success">
        Signup
    </button>

</form>
